<%- include('layout/header') %>

<style>
 body {
  background-image: url('https://cdn.pixabay.com/photo/2017/04/25/22/28/despaired-2261021_1280.jpg');
  background-size: cover;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: center center;
  min-height: 100vh;
  overflow-x: hidden;
}
  .edit-container {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    min-height: 90vh;
    padding-left: 5%;
  }

  .edit-card {
    background-color: #fff;
    padding: 2rem 1.5rem;
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    width: 100%;
    max-width: 500px; /* Smaller max width */
    transition: transform 0.3s ease;
  }

  .edit-card:hover {
    transform: scale(1.01);
  }

  .edit-header {
    background-color: #000;
    color: white;
    padding: 1rem;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
    text-align: center;
    font-size: 1.3rem;
    font-weight: 600;
    margin: -2rem -1.5rem 1.5rem -1.5rem;
  }

  .form-label {
    font-weight: 600;
    margin-bottom: 4px;
  }

  .form-control {
    border-radius: 8px;
    padding: 0.6rem;
  }

  .form-control:focus {
    border-color: #000;
    box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.15);
  }

  .btn-dark {
    background-color: #000;
    color: #fff;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    transition: background-color 0.3s ease;
  }

  .btn-dark:hover {
    background-color: #333;
  }

  .img-thumbnail {
    border-radius: 8px;
    margin-top: 0.5rem;
    max-width: 100px;
  }
</style>

<div class="container edit-container">
  <div class="edit-card">
    <div class="edit-header">
      Edit User (<%= user.name %>)
    </div>
    <form action="/update/<%= user._id %>" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter name" value="<%= user.name %>" required />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter email" value="<%= user.email %>" required />
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone</label>
        <input type="tel" id="phone" name="phone" class="form-control" placeholder="Enter phone" value="<%= user.phone %>" required />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Select Image</label>
        <input id="image" class="form-control" type="file" name="image" />
        <img src="/<%= user.image %>" class="img-thumbnail">
      </div>
      <input type="hidden" name="old_image" value="<%= user.image %>" />
      <div class="mb-3 d-grid">
        <input type="submit" value="Update User" class="btn btn-dark" />
      </div>
    </form>
  </div>
</div>

<%- include('layout/footer') %>
